<h1 class="friends-title">Friends list</h1>
<ul class="users-section">
  <% @friends.each do |friendship| %>
  <li class="user-item">
    <div class="user-name">
      <%= friend_name(friendship) %>
    </div>

    <div class="user-content">
      <span class="user-state">
      <%= delete_friend(friendship) %>
      </span>
    </div>
  </li>
  <% end %>
</ul>

<% if @friend_requests.any? %>
<h2 class="friends-title">Friend requests <span>(<%= @friend_requests.size%>)</span></h2>
<%= render 'friend_requests' %>
<% end %>
