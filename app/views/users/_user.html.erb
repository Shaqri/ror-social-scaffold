<% unless same_user?(current_user, user) %>
     <% if current_user.friend?(user) %>
     <li class="user-item">
       <div class="user-name">
           <%= link_to user.name, user_path(user), class: 'profile-link' %>
       </div>
       <div class="user-content">
         <span class="user-state">Friends</span>
       </div>

       </li>
     <% elsif pending_friends?(user) %>
      <li class="user-item">
        <div class="user-name">
            <%= link_to user.name, user_path(user), class: 'profile-link' %>
        </div>
        <div class="user-content">
          <span class="user-state"> <%= cancel_friend_request(user) %> </span>
        </div>

       </li>
     <% elsif no_friend_requested?(user) %>
     <li class="user-item">
       <div class="user-name">
           <%= link_to user.name, user_path(user), class: 'profile-link' %>
       </div>
       <div class="user-content">
         <span class="user-state"><%= add_friend(user) %></span>
       </div>

        </li>
     <% end %>
  <% end %>
